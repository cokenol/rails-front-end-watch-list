<div class="container">
  <h1>Lists</h1>
  <%= link_to 'New list', new_list_path  %>
    <div class="cards">
      <% @lists.each do |list| %>
        <%= link_to list_path(list) do  %>
          <% if list.photo.attached? %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
              <%= list.name %>
            </div>
          <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
              <%= list.name %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
</div>
